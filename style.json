{
    "version": 8,
    "glyphs": "https://raw.githubusercontent.com/latidudemaps/GeologiaVDA/main/data/fonts/{fontstack}/{range}.pbf",
    "sprite": "https://raw.githubusercontent.com/latidudemaps/GeologiaVDA/main/data/sprites/sprite",
    "sources": {
        "basemap": {
            "type": "raster",
            "tiles": [
                "https://server.arcgisonline.com/ArcGIS/rest/services/World_Imagery/MapServer/tile/{z}/{y}/{x}"
            ],
            "tileSize": 256,
            "attribution": "&copy; ESRI ArcGIS World Imagery",
            "maxzoom": 19
        },
        "terrainSource": {
            "type": "raster-dem",
            "url": "cog://https://raw.githubusercontent.com/latidudemaps/GeologiaVDA/main/data/DEM_VDA_5m_COG.tif#dem",
            "tileSize": 256,
            "maxzoom": 15
        },
        "hillshadeSource": {
            "type": "raster",
            "url": "cog://https://raw.githubusercontent.com/latidudemaps/GeologiaVDA/main/data/HS_VDA_5m_COG.tif",
            "tileSize": 256,
            "maxzoom": 15
        },
        "geoSource": {
            "type": "raster",
            "url": "cog://https://raw.githubusercontent.com/latidudemaps/GeologiaVDA/main/data/geoVDA_COG.tif",
            "tileSize": 256,
            "maxzoom": 15
        },
        "geoVectorSource": {
            "type": "vector",
            "url": "pmtiles://https://raw.githubusercontent.com/latidudemaps/GeologiaVDA/main/data/geoVDA.pmtiles"
        },
        "cities": {
            "type": "vector",
            "url": "pmtiles://https://raw.githubusercontent.com/latidudemaps/MountainAtlas/main/data/cities.pmtiles"
        },
        "peaks": {
            "type": "geojson",
            "data": "https://raw.githubusercontent.com/latidudemaps/GeologiaVDA/main/data/peaks.geojson"
        }
    },
    "layers": [
        {
            "id": "basemap",
            "type": "raster",
            "source": "basemap"
        },
        {
            "id": "geologia",
            "type": "raster",
            "source": "geoSource",
            "paint": {
                "raster-opacity": 0.7,
                "raster-resampling": "linear"
            }
        },
        {
            "id": "hillshade",
            "type": "raster",
            "source": "hillshadeSource",
            "paint": {
                "raster-opacity": 0.3,
                "raster-resampling": "linear"
            }
        },
        {
            "id": "geologiaVDA",
            "type": "fill",
            "source": "geoVectorSource",
            "source-layer": "geoVDA",
            "paint": {
                "fill-color": "rgba(0, 136, 136, 0)",
                "fill-outline-color": "#ffffff"
            }
        },
        {
            "id": "geo-labels",
            "type": "symbol",
            "source": "geoVectorSource",
            "source-layer": "geoVDA",
            "minzoom": 10,
            "layout": {
                "text-field": ["get", "Sigla"],
                "text-font": ["Montserrat Regular"],
                "text-size": [
                    "interpolate",
                    ["linear"],
                    ["zoom"],
                    10, 8,
                    12, 10,
                    14, 12
                ],
                "text-allow-overlap": false,
                "text-ignore-placement": false,
                "text-padding": 15,
                "symbol-spacing": 250,
                "text-max-angle": 45,
                "symbol-placement": "point",
                "text-anchor": "center"
            },
            "paint": {
                "text-color": "#000000",
                "text-opacity": [
                    "interpolate",
                    ["linear"],
                    ["zoom"],
                    8, 0,
                    10, 1
                ]
            }
        },
        {
            "id": "city-polygons",
            "type": "fill",
            "source": "cities",
            "source-layer": "cities",
            "paint": {
                "fill-color": "rgba(255, 255, 255, 0.2)",
                "fill-outline-color": "#ffffff"
            },
            "minzoom": 8
        },
        {
            "id": "city-labels",
            "type": "symbol",
            "source": "cities",
            "source-layer": "cities",
            "minzoom": 10,
            "layout": {
                "text-field": ["get", "loc_sg_top"],
                "text-font": ["Montserrat Regular"],
                "text-size": [
                    "interpolate",
                    ["linear"],
                    ["zoom"],
                    10, 12,
                    12, 14,
                    14, 16
                ],
                "text-allow-overlap": false,
                "text-ignore-placement": false,
                "text-padding": 15,
                "symbol-spacing": 250,
                "text-max-angle": 45,
                "symbol-placement": "point",
                "text-anchor": "center"
            },
            "paint": {
                "text-color": "#ffffff",
                "text-opacity": [
                    "interpolate",
                    ["linear"],
                    ["zoom"],
                    8, 0,
                    10, 1
                ]
            }
        },
        {
            "id": "peaks-callout-lines",
            "type": "symbol",
            "source": "peaks",
            "minzoom": 10,
            "layout": {
                "icon-image": "peak-line",
                "icon-anchor": "bottom",
                "icon-allow-overlap": true,
                "icon-ignore-placement": true
            },
            "paint": {
                "icon-opacity": 0.8
            }
        },
        {
            "id": "peaks-points",
            "type": "circle",
            "source": "peaks",
            "minzoom": 10,
            "paint": {
                "circle-radius": 3,
                "circle-color": "#ffffff"
            }
        },
        {
            "id": "peaks-labels",
            "type": "symbol",
            "source": "peaks",
            "minzoom": 10,
            "layout": {
                "text-field": [
                    "concat",
                    ["get", "name"],
                    "\n",
                    ["number-format", ["get", "elevation"], {"locale": "it-IT"}],
                    "m"
                ],
                "text-font": ["Montserrat Regular"],
                "text-size": [
                    "interpolate",
                    ["linear"],
                    ["zoom"],
                    10, 10,
                    12, 11,
                    14, 12
                ],
                "text-line-height": 1.2,
                "text-allow-overlap": false,
                "text-ignore-placement": false,
                "text-offset": [0, -2.5],
                "text-anchor": "bottom",
                "text-max-angle": 45
            },
            "paint": {
                "text-color": "#ffffff",
                "text-halo-color": "rgba(0, 0, 0, 0.9)",
                "text-halo-width": 1.5,
                "text-halo-blur": 0.5,
                "text-opacity": [
                    "interpolate",
                    ["linear"],
                    ["zoom"],
                    9, 0,
                    10, 1
                ]
            }
        }
    ],
    "terrain": {
        "source": "terrainSource",
        "exaggeration": 1.5
    },
    "sky": {}
}