{
    "version": 8,
    "glyphs": "https://raw.githubusercontent.com/latidudemaps/MountainAtlas/main/data/fonts/{fontstack}/{range}.pbf",
    "sources": {
        "basemap": {
            "type": "raster",
            "tiles": [
                "https://server.arcgisonline.com/ArcGIS/rest/services/World_Imagery/MapServer/tile/{z}/{y}/{x}"
            ],
            "tileSize": 256,
            "attribution": "&copy; ESRI ArcGIS World Imagery",
            "maxzoom": 19
        },
        "terrainSource": {
            "type": "raster-dem",
            "url": "cog://https://raw.githubusercontent.com/latidudemaps/MountainAtlas/main/data/South_Italy_COG_2.tif#dem",
            "tileSize": 256,
            "maxzoom": 15
        },
        "hillshadeSource": {
            "type": "raster",
            "url": "cog://https://raw.githubusercontent.com/latidudemaps/MountainAtlas/main/data/HS_COG.tif",
            "tileSize": 256,
            "maxzoom": 15
        },
        "geoSource": {
            "type": "raster",
            "url": "cog://https://raw.githubusercontent.com/latidudemaps/MountainAtlas/main/data/geoVDA_COG.tif",
            "tileSize": 256,
            "maxzoom": 15
        },
        "geoVectorSource": {
            "type": "vector",
            "url": "pmtiles://https://raw.githubusercontent.com/latidudemaps/MountainAtlas/main/data/geoVDA.pmtiles"
        },
        "rivers": {
            "type": "vector",
            "url": "pmtiles://https://raw.githubusercontent.com/latidudemaps/MountainAtlas/main/data/fiumi.pmtiles"
        },
        "cities": {
            "type": "vector",
            "url": "pmtiles://https://raw.githubusercontent.com/latidudemaps/MountainAtlas/main/data/cities.pmtiles"
        },
        "MountainAreas": {
            "type": "geojson",
            "data": "https://raw.githubusercontent.com/latidudemaps/MountainAtlas/main/data/MountainAreas.geojson"
        }
    },
    "layers": [
        {
            "id": "basemap",
            "type": "raster",
            "source": "basemap"
        },
        {
            "id": "hillshade",
            "type": "raster",
            "source": "hillshadeSource",
            "paint": {
                "raster-opacity": 0.3,
                "raster-resampling": "linear"
            }
        },
        {
            "id": "geologia",
            "type": "raster",
            "source": "geoSource",
            "paint": {
                "raster-opacity": 1,
                "raster-resampling": "linear"
            }
        },
        {
            "id": "geologiaVDA",
            "type": "fill",
            "source": "geoVectorSource",
            "source-layer": "geoVDA",
            "paint": {
                "fill-color": "rgba(0, 136, 136, 0.2)",
                "fill-outline-color": "#ffffff"
            }
        },
        {
            "id": "geo-labels",
            "type": "symbol",
            "source": "geoVectorSource",
            "source-layer": "geoVDA",
            "minzoom": 10,
            "layout": {
                "text-field": ["get", "Sigla"],
                "text-font": ["Montserrat Regular"],
                "text-size": [
                    "interpolate",
                    ["linear"],
                    ["zoom"],
                    10, 8,
                    12, 10,
                    14, 12
                ],
                "text-allow-overlap": false,
                "text-ignore-placement": false,
                "text-padding": 15,
                "symbol-spacing": 250,
                "text-max-angle": 45,
                "symbol-placement": "point",
                "text-anchor": "center"
            },
            "paint": {
                "text-color": "#000000",
                "text-opacity": [
                    "interpolate",
                    ["linear"],
                    ["zoom"],
                    8, 0,
                    10, 1
                ]
            }
        },
        {
            "id": "mountainAreas",
            "type": "fill",
            "source": "MountainAreas",
            "paint": {
                "fill-color": "rgba(0, 136, 136, 0.2)",
                "fill-outline-color": "#ffffff"
            }
        },
        {
            "id": "rivers",
            "type": "line",
            "source": "rivers",
            "source-layer": "fiumi",
            "layout": {
                "visibility": "visible",
                "line-join": "round",
                "line-cap": "round"
            },
            "paint": {
                "line-color": "#FFFFFF",
                "line-width": [
                    "interpolate",
                    ["linear"],
                    ["zoom"],
                    8, 0.5,
                    12, 1,
                    16, 2
                ]
            }
        },
        {
            "id": "city-polygons",
            "type": "fill",
            "source": "cities",
            "source-layer": "cities",
            "paint": {
                "fill-color": "rgba(255, 255, 255, 0.2)",
                "fill-outline-color": "#ffffff"
            },
            "minzoom": 8
        },
        {
            "id": "city-labels",
            "type": "symbol",
            "source": "cities",
            "source-layer": "cities",
            "minzoom": 10,
            "layout": {
                "text-field": ["get", "loc_sg_top"],
                "text-font": ["Montserrat Regular"],
                "text-size": [
                    "interpolate",
                    ["linear"],
                    ["zoom"],
                    10, 12,
                    12, 14,
                    14, 16
                ],
                "text-allow-overlap": false,
                "text-ignore-placement": false,
                "text-padding": 15,
                "symbol-spacing": 250,
                "text-max-angle": 45,
                "symbol-placement": "point",
                "text-anchor": "center"
            },
            "paint": {
                "text-color": "#ffffff",
                "text-opacity": [
                    "interpolate",
                    ["linear"],
                    ["zoom"],
                    8, 0,
                    10, 1
                ]
            }
        }
    ],
    "terrain": {
        "source": "terrainSource",
        "exaggeration": 1.5
    },
    "sky": {}
}